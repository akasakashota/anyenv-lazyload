#!/usr/bin/env bash
# Usage: eval "$(anyenv lazyload)"
# Summary: Initialize `**env` lazy instead of `anyenv init`.

for env in $(/bin/ls $ANYENV_ROOT/envs/)
do

  shims=${shims}$ANYENV_ROOT/envs/$env/shims:
  # add **env to PATH
  bins=${bins}$ANYENV_ROOT/envs/$env/bin:
  ENV_ROOT=$(echo ${env} | awk '{print toupper($0)}')_ROOT

  # export env for **env
  echo "export ${ENV_ROOT}=$ANYENV_ROOT/envs/$env"

  # init on call **env
  cat <<EOS
function ${env}() {
  unset -f ${env}
  eval "\$(${env} init - \${SHELL})"
  ${env} \$@
}
EOS

  # load completions for **env
  if [ -e $ANYENV_ROOT/envs/${env}/completions/${env}.${SHELL##*/} ];then
    echo "source $ANYENV_ROOT/envs/${env}/completions/${env}.${SHELL##*/}"
  fi

done

# load completions for anyenv
if [ -e $ANYENV_ROOT/completions/anyenv.${SHELL##*/} ];then
    echo "source $ANYENV_ROOT/completions/anyenv.${SHELL##*/}"
fi
echo "export PATH=\"${shims}${bins}${PATH}\""
